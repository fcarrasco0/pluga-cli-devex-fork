{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "rules": {
    "func-names": "off",
    "no-await-in-loop": "off",
    "no-console": "off",
    "no-param-reassign": "off",
    "no-restricted-syntax": "off",
    "prefer-arrow-callback": "off",
    "max-lines": ["error", { "max": 150 }]
  },
  "overrides": [
    {
      "files": ["**/meta.js", "*_test.js", "*app.json"],
      "rules": {
        "max-lines": ["off"]
      }
    }
  ]
}
